@using NDKFastfood.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NDKFastfood.Models.Loai>

@{
    ViewBag.Title = "Loai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;font-weight:bold">Quản lý thông tin loại món</h2>

<a style="font-size:20px;color:black;padding-left:420px" href="@Url.Action("ThemLoai","Admin")"><i class="fa fa-plus-circle"> Thêm mới</i></a>

<table align="center" border="2" cellpadding="10">
    <tr align="center" , style="height:50px">
        <th style="width:150px;color:red;font-size:20px">Mã loại</th>
        <th style="width:325px;color:red;font-size:20px">Tên loại</th>
        <th style="width:200px;color:red;font-size:20px">Công cụ</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr align="center" , style="height:50px">
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td style="font-weight:bold">
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                <a style="font-size:20px;color:black" href="@Url.Action("SuaLoai","Admin", new { id = item.MaLoai })"><i class="fa fa-edit"> Sửa</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("ChiTietLoai","Admin", new { id = item.MaLoai })"><i class="fa fa-info-circle"> Chi tiết</i></a>
                <br />
                <a style="font-size:20px;color:black" href="@Url.Action("XoaLoai","Admin", new { id = item.MaLoai })"><i class="fa fa-trash"> Xóa</i></a>
            </td>
        </tr>
    }
</table>
<div style="padding-left:1375px;font-size:20px;padding-top:10px;font-weight:bold">
    @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="product__pagination">
        @Html.PagedListPager(Model, page => Url.Action("Loai", new { page = page }))
    </div>
</div>