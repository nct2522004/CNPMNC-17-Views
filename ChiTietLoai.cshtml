@model NDKFastfood.Models.Loai

@{
    ViewBag.Title = "ChiTietLoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;font-weight:bold">Chi tiết loại</h2>

<div>
    <h4>Loai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

        <dt>
            Tên loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoai)
        </dd>

    </dl>
</div>
<div>
    <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("Loai","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
    <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("SuaLoai","Admin", new { id = Model.MaLoai })"><i class="fa fa-edit"> Chỉnh sửa</i></a>
</div>
