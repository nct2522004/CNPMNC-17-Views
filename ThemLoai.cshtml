@model NDKFastfood.Models.Loai

@{
    ViewBag.Title = "ThemLoai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;font-weight:bold">Thêm loại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="row" style="width:100%">
            <div class="col-md-4">
                <h5 style="font-weight:bold;padding-left:120px;padding-bottom:5px">Tên loại</h5>
                <div style="padding-left: 120px">
                    @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="width:100%">
            <div class="col-md-3">
                <a style="font-weight:bold;color:black;padding-left:120px" href="@Url.Action("Loai","Admin")"><i class="fa fa-arrow-left"> Trở lại</i></a>
            </div>
            <div class="col-md-3">
                <div class="col-md-offset-2 col-md-10" style="padding-left: 30px">
                    <button style="font-weight: bold; color: black " type="submit"><i class="fa fa-save"> Thêm</i></button>
                </div>
            </div>
        </div>
    </div>
}


